<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/seekBarC"
        android:layout_width="409dp"
        android:layout_height="182dp"
        android:max="100"
        android:min="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celsiusNum" />

    <SeekBar
        android:id="@+id/seekBarF"
        android:layout_width="415dp"
        android:layout_height="135dp"
        android:layout_marginTop="32dp"
        android:max="212"
        android:min="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheitNum" />

    <TextView
        android:id="@+id/celsiusNum"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Celsius" />

    <TextView
        android:id="@+id/fahrenheitNum"
        android:layout_width="410dp"
        android:layout_height="61dp"
        android:text="32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fahrenheit" />

    <TextView
        android:id="@+id/Celsius"
        android:layout_width="241dp"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Celsius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Fahrenheit"
        android:layout_width="228dp"
        android:layout_height="49dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Fahrenheit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarC" />

</androidx.constraintlayout.widget.ConstraintLayout>